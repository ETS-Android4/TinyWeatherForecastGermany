<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boldwidget_relative_container"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView android:id="@+id/classicwidget_reference_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:textColor="@color/widget_textcolor"
        android:textSize="@dimen/widget_textsize_small"
        android:visibility="visible"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/dwd_notice"/>

    <LinearLayout
        android:id="@+id/boldwidget_maincontainer"
        android:layout_above="@id/classicwidget_reference_text"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <!--
            TODAY
         -->

        <LinearLayout android:id="@+id/boldwidget_today_container"
            android:orientation="vertical"
            android:layout_weight="10"
            android:weightSum="10"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <LinearLayout android:id="@+id/boldwidget_today_horizontal_container"
                android:orientation="horizontal"
                android:layout_weight="8"
                android:weightSum="10"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_width="wrap_content">

                <TextView android:id="@+id/boldwidget_current_temperature"
                    android:textSize="@dimen/widget_textsize_verylarge"
                    android:textColor="@color/widget_textcolor"
                    android:gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" tools:ignore="NestedWeights"
                    android:text="17°"/>

                <ImageView android:id="@+id/boldwidget_today_condition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@mipmap/partly_cloudy_day" />

                <LinearLayout android:id="@+id/boldwidget_today_temperature_container"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp">

                    <TextView android:id="@+id/boldwidget_today_max"
                        android:textSize="@dimen/widget_textsize_large"
                        android:textColor="@color/widget_textcolor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23°"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:src="@mipmap/white_bar"/>

                    <TextView android:id="@+id/boldwidget_today_min"
                        android:textSize="@dimen/widget_textsize_large"
                        android:textColor="@color/widget_textcolor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11°"/>

                </LinearLayout>

            </LinearLayout>

            <TextView android:id="@+id/boldwidget_dayofweek_today"
                android:textSize="@dimen/widget_textsize_large"
                android:textColor="@color/widget_textcolor"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"/>
        </LinearLayout>

        <!--
        FC 1st DAY
        -->

        <LinearLayout android:id="@+id/boldwidget_fc1_container"
            android:orientation="vertical"
            android:layout_weight="5"
            android:weightSum="10"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <LinearLayout android:id="@+id/boldwidget_fc1_horizontal_container"
                android:orientation="horizontal"
                android:layout_weight="8"
                android:weightSum="6"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_width="wrap_content">

                <ImageView android:id="@+id/boldwidget_fc1_weatherconditionicon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@mipmap/moderate_showers" />

                <LinearLayout android:id="@+id/boldwidget_fc1_temperature_container"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp">

                    <TextView android:id="@+id/boldwidget_fc1_max"
                        android:textSize="@dimen/widget_textsize_large"
                        android:textColor="@color/widget_textcolor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24°"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:src="@mipmap/white_bar"/>


                    <TextView android:id="@+id/boldwidget_fc1_min"
                        android:textSize="@dimen/widget_textsize_large"
                        android:textColor="@color/widget_textcolor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16°"/>

                </LinearLayout>

            </LinearLayout>

            <TextView android:id="@+id/boldwidget_dayofweek_fc1"
                android:textSize="@dimen/widget_textsize_large"
                android:textColor="@color/widget_textcolor"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mo"/>
        </LinearLayout>

        <!--
        FC 2nd DAY
        -->

        <LinearLayout android:id="@+id/boldwidget_fc2_container"
            android:orientation="vertical"
            android:layout_weight="5"
            android:weightSum="10"
            android:layout_height="match_parent"
            android:layout_width="0dp">

            <LinearLayout android:id="@+id/boldwidget_fc2_horizontal_container"
                android:orientation="horizontal"
                android:layout_weight="8"
                android:weightSum="6"
                android:layout_gravity="center"
                android:layout_height="0dp"
                android:layout_width="wrap_content">

                <ImageView android:id="@+id/boldwidget_fc2_weatherconditionicon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:src="@mipmap/thunderstorm" />

                <LinearLayout android:id="@+id/boldwidget_fc2_temperature_container"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp">

                    <TextView android:id="@+id/boldwidget_fc2_max"
                        android:textSize="@dimen/widget_textsize_large"
                        android:textColor="@color/widget_textcolor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29°"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="3dp"
                        android:src="@mipmap/white_bar"/>

                    <TextView android:id="@+id/boldwidget_fc2_min"
                        android:textSize="@dimen/widget_textsize_large"
                        android:textColor="@color/widget_textcolor"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23°"/>

                </LinearLayout>

            </LinearLayout>

            <TextView android:id="@+id/boldwidget_dayofweek_fc2"
                android:textSize="@dimen/widget_textsize_large"
                android:textColor="@color/widget_textcolor"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

