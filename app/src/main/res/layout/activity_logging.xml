<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/logging_intoButtonLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="3dip"
        android:layout_alignParentBottom="true">

        <Button android:id="@+id/logging_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/fcmain_textsize_medium"
            android:textColor="?attr/colorText"
            android:text="@string/logging_button_back"/>
        <Button android:id="@+id/logging_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/fcmain_textsize_medium"
            android:textColor="?attr/colorText"
            android:text="@string/logging_button_clear"/>
        <Button android:id="@+id/logging_button_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/fcmain_textsize_medium"
                android:textColor="?attr/colorText"
                android:text="Share"/>
        <Button android:id="@+id/logging_button_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/fcmain_textsize_medium"
            android:textColor="?attr/colorText"
            android:text="@string/logging_button_copy"/>
    </LinearLayout>

    <ScrollView android:id="@+id/infoScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_above="@id/logging_intoButtonLine">

        <TextView
            android:id="@+id/logging_infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:minLines="2"
            android:singleLine="false"
            android:ellipsize="none"
            android:maxLines="3000"
            android:textSize="@dimen/licence_textsize"
            android:textColor="?attr/colorText"
            android:gravity="top"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
        />

    </ScrollView>

</RelativeLayout>